{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "paths": {
      "@core/*": ["src/app/core/*"],
      "@store/*": ["src/app/core/store/*"],
      "@storeIndex/*": ["src/app/core/store/index"],
      "@shared/*": ["src/app/shared/*"],
    },
    "outDir": "./out-tsc/spec",
    "types": [
      "jasmine",
      "node"
    ]
  },
  "files": [
    "src/test.ts",
    "src/zone-flags.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
